.chapter2bg
  width 100%
  height 100%
  background-image url("../../../static/images/divertissement.jpg")
  background-size cover
  .half-block-1
    display inline-block
    width 40%
    height 100%
    font-size 80px
    text-align center
    font-family 'franchise'
    color $white
    vertical-align top
    .center-player
      margin-top 50%
  .half-block-2
    display inline-block
    width 59%
    height 100%
    font-size 80px
    text-align left
    font-family 'franchise'
    color $white
    vertical-align top
    .chapter-2-title
      display block
      color $white
      font-size $chapter1Title
      font-family 'franchise'
      height auto
      text-align left
      margin-top 100px
    .chapter-2-p
      display block
      color $white
      font-size $chapter1P
      font-family 'source-regular'
      padding-right 70px
      height auto
      text-align left
      line-height 24px
    .more-infos-block
      display block
      position relative
      .chapter2-more-infos
        display block
        background none
        border none
        text-align left
        padding 0
        font-size 12px
        color $pink
        outline none
        cursor pointer
      .chapter2-more-infos-close
        position absolute
        z-index 3
        background none
        border none
        text-align left
        padding 0
        font-size 30px
        font-family 'franchise'
        color $pink
        top 20px
        right 20px
        cursor pointer
        outline none
      .more-infos-content
        position absolute
        width 500px
        height 420px
        background-color rgba(0,0,0,.95)
        transform translateY(-200px)
        padding 40px 40px
        z-index 2
        h2
          font-size 40px
        p
          font-size 14px
          font-family 'source-regular'
.temoignageaudio
  font-size 20px
  margin-bottom 0
  font-family 'franchise'
