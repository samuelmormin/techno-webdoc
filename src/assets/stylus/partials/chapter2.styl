.half-block-1
  display inline-block
  width 50%
  height 100%
  font-size 80px
  text-align center
  font-family 'franchise'
  color $white
  vertical-align top
.half-block-2
  display inline-block
  width 50%
  height 100%
  font-size 80px
  text-align left
  font-family 'franchise'
  color $white
  vertical-align top
  .chapter-2-title
    display block
    color $white
    font-size $chapter1Title
    font-family 'franchise'
    height auto
    text-align left
    margin-top 100px
  .chapter-2-p
    display block
    color $white
    font-size $chapter1P
    font-family 'helvetica'
    padding-right 70px
    height auto
    text-align left
    line-height 24px
  .more-infos-block
    display block
    position relative
    .chapter2-more-infos
      display block
      background none
      border none
      text-align left
      padding 0
      font-size 12px
      color $pink
    .chapter2-more-infos-close
      position absolute
      z-index 3
      background none
      border none
      text-align left
      padding 0
      font-size 30px
      font-family 'franchise'
      color $pink
      top 20px
      right 20px
    .more-infos-content
      position absolute
      width 500px
      height 420px
      background-color rgba(0,0,0,.95)
      transform translateY(-200px)
      padding 40px 40px
      z-index 2
      h2
        font-size 40px
      p
        font-size 14px
        font-family 'helvetica'