.renaissance
  width 100%
  height 100%
  background-image url("../../../static/images/soire.jpg")
  background-size cover
  text-align center
  .sous-page-link
    font-family 'franchise'
    display inline-block
    border 1px solid $pink
    padding 20px 40px
    color $pink
    font-size 16px
    margin 0 auto
    margin-top 20px
    text-decoration none
    transition all .5s ease
    &:hover
      background-color $pink
      color $white