    cursor pointer
.experience-choice-button-societe
  font-family 'franchise'
  background-color rgba(0,0,0,0)
  position absolute
  top 77%
  left 15%
  z-index 10
  border 1px solid $pink
  margin-top 15px
  padding 20px 40px
  color $pink
  font-size 20px
  line-height 30px
  margin 0 auto
  text-decoration none
  transition all .5s ease
  letter-spacing: 2px
  cursor pointer
