.suite
  display block
  width auto
  height 50px
  border none
  background-color red
  z-index 6
  border 0px
  outline none
  cursor pointer
.prev-chapter
    display inline-block
    width auto
    height 68px
    color $pink
    z-index 15
    font-size 25px
    font-family 'franchise'
    text-decoration none
    transform translateY(3px)
    background-color rgba(0,0,0,0)
    border none
    outline none
    cursor pointer
    &:before
      content'<'
      display block
      padding 0 0 0 20px
      font-size 50px
      width 50px
      height auto
      transform translateX(40px) translateY(-35px)
@keyframes pulse {
  0% {
    opacity: 1;
    transform: translateX(-2px) translateY(-2px) scale(1.2,1.2);
  }
  20% {
    opacity: 0.8;
    transform translateX(-2px) translateY(-2px) scale(2,2);
  }
  40% {
    opacity: 0.6;
  }
  60% {
    opacity: 0.4;
  }
  80% {
    opacity: 0.2;
  }
  100% {
    transform: scale(3,3);
    opacity: 0;
  }
}
