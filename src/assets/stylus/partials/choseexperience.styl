.experience-choice-button
  display inline-block
  border 1px solid $pink
  padding 20px 40px
  color $pink
  font-size 20px
  line-height 30px
  margin 0 auto
  text-decoration none
  transition all .5s ease
  letter-spacing: 2px
  &:hover
    background-color $pink
    color $white
