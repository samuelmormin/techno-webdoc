.choice-block-1
  display inline-block
  width 50%
  height 100%
  background-image url("../../../static/images/berlin.jpg")
  background-color rgba(0, 0, 0, 0.5)
  background-size cover
  font-size 80px
  text-align center
  font-family 'franchise'
  color $white
  // opacity 0.3
  &:hover
    background-image url("../../../static/images/berlin1.jpg")
  p
    margin: auto
    width 50%
    font-family 'source-regular'
    font-size 20px
