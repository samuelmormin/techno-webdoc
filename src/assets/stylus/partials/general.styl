body
  background-color $black
  margin 0 auto
  padding 0
  //font-family 'franchise'
  .video-background
    position absolute
    top 0
    left 0
    width 100%
    height 100%
    z-index 0
  .container-full
    position absolute
    width 100%
    z-index 2
    font-size 0
    height 100vh
    .choice-block-1
      display inline-block
      width 50%
      height 100%
      background-color $black
      font-size 80px
      text-align center
      font-family 'franchise'
      color $white
    .choice-block-2
      display inline-block
      width 50%
      height 100%
      background-color $black
      font-size 80px
      text-align center
      font-family 'franchise'
      color $white
    .experience-choice-button
      display inline-block
      border 1px solid $pink
      padding 20px 40px
      color $pink
      font-size 20px
      line-height 20px
      margin 0 auto
      text-decoration none
      transition all .5s ease
      &:hover
        background-color $pink
        color $white
  .next-chapter
    display inline-block
    width auto
    height 68px
    color $pink
    z-index 15
    font-size 25px
    font-family 'franchise'
    text-decoration none
    transform translateY(12px)
    &:after
      content'>'
      display block
      padding 0 0 0 20px
      font-size 50px
      width 50px
      height auto
      transform translateX(40px) translateY(-35px)